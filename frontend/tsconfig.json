{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": [
      "jest",
      "node"
    ],
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/screens/*": [
        "src/screens/*"
      ],
      "@/services/*": [
        "src/services/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/contexts/*": [
        "src/contexts/*"
      ],
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/theme/*": [
        "src/theme/*"
      ],
      "@/types/*": [
        "src/types/*"
      ],
      "@/navigation/*": [
        "src/navigation/*"
      ]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "tailwind.config.js"
  ]
}